<form action="/products/<%= @product.id %>" method="post">
  <input type="hidden" name="_method" value="patch" />
  <div>
    Name: <input type="text" name="name" value="<%= @product.name %>">
  </div>
  <div>
    Price: <input type="text" name="price" value="<%= @product.price %>">
  </div>
  <div>
    Description: <input type="text" name="description" value="<%= @product.description %>">
  </div>
  <div>
    Inventory: <input type="text" name="inventory" value="<%= @product.inventory %>">
  </div>
  <div>
    Supplier ID: 
    <select name="supplier_id" id="supplier-select">
      <option value="<%= @product.supplier.id %>"><%= @product.supplier.name %></option>
      <% Supplier.all.each do |supplier|%>
        <option value="<%= supplier.id %>%"><%= supplier.name %></option>
      <% end %>
    </select>
  </div>
  <br><br>
  <div>
    <input type="submit" value="Update Product">
  </div>
</form>